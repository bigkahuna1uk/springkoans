<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="singletonInstance" class="com.programmingspring.koans.Singleton" factory-method="getInstance"/>

    <bean id="staticFactoryProduct" class="com.programmingspring.koans.StaticFactory" factory-method="createProduct">
        <constructor-arg name="productName" value="someProductName"/>
    </bean>

    <bean id="pojoFactory" class="com.programmingspring.koans.PojoFactory"/>

    <bean id="pojoFactoryProduct" factory-bean="pojoFactory" factory-method="createProduct">
        <constructor-arg value="anotherProductName"/>
    </bean>

    <bean id="springFactoryBeanProduct" class="com.programmingspring.koans.SpringAwareFactory"/>

    <bean id="service" class="com.programmingspring.koans.ProductDependentService">
        <constructor-arg ref="springFactoryBeanProduct" />
    </bean>

</beans>